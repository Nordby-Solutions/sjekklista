@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <!-- TOP APP BAR -->
    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@ToggleDrawer" />

        <MudText Typo="Typo.h6">Sjekklista</MudText>

        <MudSpacer />

        <!-- USER SECTION -->
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1" Class="ml-4">

            <MudText Typo="Typo.subtitle2" Class="mr-2">
                Sebastian Nordby
            </MudText>

            <MudAvatar Size="Size.Medium"
                       Color="Color.Secondary"
                       Variant="Variant.Filled"
                       Class="cursor-pointer">
                SN
            </MudAvatar>

        </MudStack>
    </MudAppBar>

    <!-- LEFT NAVIGATION DRAWER -->
    <MudDrawer 
        @bind-Open="_drawerOpen"
        Variant="DrawerVariant.Responsive"
        Elevation="1"
        Color="Color.Surface">
        <NavMenu />
    </MudDrawer>

    <!-- MAIN CONTENT -->
    <MudMainContent>
        <div class="p-4">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool _drawerOpen = true;

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}