# Authentication Configuration
# Copy this to .env.local and update with your actual values

# IDP Authority (OpenID Connect provider)
VITE_AUTH_AUTHORITY=https://localhost:7222

# Client ID registered with your IDP
VITE_AUTH_CLIENT_ID=hr-client

# Redirect URI after successful authentication
VITE_AUTH_REDIRECT_URI=http://localhost:3000/callback

# Post-logout redirect URI
VITE_AUTH_POST_LOGOUT_URI=http://localhost:3000

# API Base URL
VITE_API_BASE_URL=http://localhost:5000/api

# Syncfusion License (if applicable)
VITE_SYNCFUSION_LICENSE_KEY=your_license_key_here
