@page
@model Sjekklista.Identity.Pages.Logout.Index

<div class="logout-page">
    <div class="lead" style="text-align: center; margin: 60px auto; max-width: 500px;">
        <span class="sl-check" style="width: 64px; height: 64px; font-size: 32px; display: inline-block; margin-bottom: 20px;"></span>
        <h1 style="color: var(--primary-color); font-size: 2rem; margin-bottom: 16px;">Logg ut</h1>
        <p style="color: var(--text-secondary); font-size: 1.1rem;">Vil du logge ut av Sjekklista Identity?</p>
    </div>

    <form asp-page="/Account/Logout/Index" style="text-align: center;">
        <input type="hidden" name="logoutId" value="@Model.LogoutId"  />
        
        <div class="form-group">
            <button class="btn btn-primary" style="min-width: 150px;">
                <span class="glyphicon glyphicon-log-out" style="color: white;"></span>
                Ja, logg ut
            </button>
        </div>
    </form>
</div>