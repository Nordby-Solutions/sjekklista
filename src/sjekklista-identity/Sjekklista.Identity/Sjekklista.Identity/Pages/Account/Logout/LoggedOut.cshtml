@page
@model Sjekklista.Identity.Pages.Logout.LoggedOut

<div class="logged-out-page">
    <span class="sl-check" style="width: 64px; height: 64px; font-size: 32px; display: inline-block; margin-bottom: 20px;"></span>
    <h1>
        Utlogget
        <small style="display: block; margin-top: 12px;">Du er nå logget ut</small>
    </h1>

    @if (Model.View.PostLogoutRedirectUri != null)
    {
        <div style="margin-top: 30px; padding: 20px; background-color: var(--card-bg); border-radius: 8px; box-shadow: var(--shadow-sm);">
            Klikk <a class="PostLogoutRedirectUri" href="@Model.View.PostLogoutRedirectUri">her</a> for å gå tilbake til
            <span><strong>@Model.View.ClientName</strong></span>-applikasjonen.
        </div>
    }

    @if (Model.View.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.View.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
{
    @if (Model.View.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}